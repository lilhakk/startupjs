$UI ?= {}

// -----------------------------------------
//   CONFIGURATION. $UI.Div
// -----------------------------------------

$this = merge({
  defaultHoverOpacity: 0.8,
  defaultActiveOpacity: 0.5
}, $UI.Div, true)

// -----------------------------------------
//   COMPONENT
// -----------------------------------------

_pushedSizes = ('xs' 's' 'm' 'l' 'xl' 'xxl')

// skip level 0 for shadow
// because it needed only when you want to override shadow from style sheet
_shadowLevels = ('1' '2' '3' '4')

.root
  &.rounded
    radius()

  &.circle
    radius(circle)

  for size in _pushedSizes
    &.pushed-{size}
      margin-left: $UI.gutters[size]

  for level in _shadowLevels
    &.shadow-{level}
      shadow(level)

  &.bleed
    bleed()

  &.clickable
    cursor pointer
    user-select none

    &.disabled
      cursor default
      opacity 0.5

// -----------------------------------------
//   TOOLTIP
// ---------------------------------------------
.overlay, .wrapper
  width 100%
  height 100%
  position absolute
  top 0
  left 0

.tooltipContent
  padding 1.25u 2u 1.25u 2u
  background-color #222222
  align-items center
  justify-content center
  border-radius .5u
  max-width 220

  +tablet()
    max-width 360

.popoverContent
  padding 2u 3u 2u 3u
  border-radius 1u
  background-color #ffffff
  shadow(3)

.popoverContentArrow
  border-radius .5u

.text
  color #ffffff

// -----------------------------------------
//   JS EXPORTS
// -----------------------------------------

:export
  config: $this
  shadows: $UI.shadows
