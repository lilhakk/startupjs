.row
  height 5u

.shortName
  color $UI.colors.darkLight
  font-weight 700
  font-size 1.5u
  line-height 2.5u

.label
  font-size 1.5u
  line-height 2.5u

.labelMute
  color $UI.colors.darkLight

.labelActive
  color $UI.colors.white
  font-weight 700

.cell
  justify-content center
  align-items center
  width 5u
  radius(circle)

.cellActive
  background-color $UI.colors.primary

.cellActiveRangeStart
  border-top-right-radius 0
  border-bottom-right-radius 0
  background-color $UI.colors.primary

.cellActiveRangeEnd
  border-top-left-radius 0
  border-bottom-left-radius 0
  background-color $UI.colors.primary

.cellActiveRange
  border-radius 0
  background-color $UI.colors.primaryLight

.cellHover
  background-color $UI.colors.primaryLighter
