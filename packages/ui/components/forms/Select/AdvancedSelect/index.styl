.wrapper
  position relative
  width 100%
  background-color $UI.colors.white
  border-radius .5u
  cursor text
  border 1px solid rgba(62, 70, 87, .25)
  min-height 4u
  align-items center
  flex-direction row

.input
  outline none
  min-width .5u

.overlay
  z-index 1
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  width 100%
  height 100%
  background-color transparent
  opacity 0
  padding 0
  margin 0

  +web()
    appearance none
    border-width 0
    cursor pointer

.tagList
  flex-direction row
  min-height 4u
  align-items center
  flex-wrap wrap
  width 100%
  cursor text
  padding .5u
