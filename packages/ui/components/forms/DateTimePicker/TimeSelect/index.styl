.container
  flex-direction column

  +from($UI.media.mobile)
    flex-direction row

.case
  height 5u
  width 34u
  margin 0 auto
  overflow hidden
  flex-direction row
  margin-top 1u
  justify-content center

  +from($UI.media.mobile)
    align-items center
    justify-content center
    max-width 7.5u
    margin-right 1u
    flex-direction row
    height auto
    flex-direction column
    margin 0

.cell, .button
  width 6.75u
  height 5u
  align-items center
  justify-content center

.button
  height 4.75u

.cellActive
  background-color $UI.colors.primary

.cellHover
  background-color $UI.colors.primaryLighter

.labelActive
  color $UI.colors.white

:export
  media: $UI.media
