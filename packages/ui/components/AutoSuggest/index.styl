.loaderCase
  justify-content center
  align-items center
  min-height 8u

.root
  padding 2u 0
  flex 1

.item
  width 100%

.portal
  position absolute
  left 200
  top 200
  width 100
  background-color #eeeeee
  align-items center
  justify-content center
  z-index 999

.content
  width 100%
  height 100%
  background-color #ffffff

.contentCase
  border-radius 1u
  width 100%
  height 100%
  overflow hidden

.overlay
  position absolute
  height 100%
  width 100%
  left 0
  top 0

  +web()
    cursor default

.wrapper
  position absolute
  width 100%
  height 100%
  z-index 8999
  left 0
  top 0

.selectMenu
  background-color #eee

.caption
  width 100%

.tagList
  padding 0 .5u
  position absolute
  align-items center
  height 4u

.tag
  background-color #ddd
  height 20px
  padding 0 6px
  margin .5u
  border-radius: 2px
  align-items center

.tagIcon
  margin-left .5u
