.loader
  justify-content center
  align-items center
  min-height 8u

.root
  padding 2u 0
  flex 1

.item
  width 100%

.portal
  position absolute
  left 200
  top 200
  width 100
  background-color #eeeeee
  align-items center
  justify-content center
  z-index 999

.content
  background-color #ffffff
  border-radius 1u
  overflow hidden
  shadow(3)

.overlay
  z-index 998
  position absolute
  height 100%
  width 100%
  left 0
  top 0

.multiselect
  min-height 4u
  background-color #fff
  border-radius .5u
  cursor text
  border 1px solid rgba(62, 70, 87, .25)

.selectMenu
  background-color #eee

.caption
  width 100%

.placeholder
  color #ced1d4
  position absolute
  left 8px
  top 6px

.multiselectInputCase
  min-width .5u

.multiselectInput
  outline none
  min-width .5u
  width 100%
  margin-top .5u

.tagList
  flex-direction row
  min-height 4u
  align-items center
  flex-wrap wrap
  width 100%
  cursor text
  padding 4px 5px 4px 0

.tag
  background-color #ddd
  height 22px;
  margin 5px 0px 0px 5px
  padding 0px 6px
  border-radius: 2px
  align-items center

.tagIcon
  margin-left .5u
