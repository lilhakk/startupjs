.multiselect
  min-height 4u
  background-color #fff
  border-radius .5u
  cursor text
  border 1px solid rgba(62, 70, 87, .25)

.tagList
  flex-direction row
  min-height 4u
  align-items center
  flex-wrap wrap
  width 100%
  cursor text
  padding 4px 5px 5px 4px

  +web()
    padding 0 5px 5px 0

.placeholder
  color #ced1d4
  position absolute
  left 1u
  top 6px

.inputCase
  min-width .5u

.input
  outline none
  min-width .5u
  width 100%
  margin-top .5u

.tag
  background-color #ddd
  height 22px;
  margin 5px 0px 0px 5px
  padding 0px 6px
  border-radius: 2px
  align-items center

.tagIcon
  margin-left .5u
