.location, .animate
  position absolute

.stamp
  position absolute
  opacity 0
  left -999
  top -999
  z-index -1

.wrapper, .overlay
  position absolute
  width 100%
  height 100%
  left 0
  top 0

.overlay
  +web()
    cursor default

.content
  padding 2u 3u
  border-radius 1u
  background-color #ffffff
  shadow(3)

.contentWithArrow
  border-radius .5u
